<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewPreguntaJugar"
        android:layout_width="302dp"
        android:layout_height="79dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonSigPreg"
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:text="Siguiente pregunta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgJugarTema" />

    <ImageView
        android:id="@+id/imgJugarTema"
        android:layout_width="168dp"
        android:layout_height="140dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen_jugar" />

    <RadioGroup
        android:layout_width="360dp"
        android:layout_height="238dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPreguntaJugar"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/radioButtonJugar1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButtonJugar2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButtonJugar3"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:text="RadioButton" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>